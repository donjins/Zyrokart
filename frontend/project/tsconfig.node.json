{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "dom", "dom.iterable"], // Add DOM support
    "module": "ESNext",
    "jsx": "react-jsx", // Critical for TSX files
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Only if using Vite 5+/modern bundler
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts"] // Include React files
}